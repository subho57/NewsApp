<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.github.subho57.newsapp.utils.BookView
        android:id="@+id/center_box_second"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="@dimen/dimen_175"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_120"
        android:layout_marginBottom="@dimen/dimen_50" />


    <com.github.subho57.newsapp.utils.SunMoonView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_box_second"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_175"
        android:layout_marginEnd="@dimen/dimen_40"
        android:text="@string/second_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_26" />


    <TextView
        android:id="@+id/desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_marginStart="@dimen/dimen_40"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/dimen_40"
        android:gravity="center"
        android:text="@string/second_desc"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_16" />

</RelativeLayout>